@page
@model FormularzModel

@if (Model.FormularzWypelniony)
{
    <p>Formularz został już wypełniony dzisiaj.</p>
}
else
{
    <form method="post">
        <div class="form-group">
            <label for="Tresc">Wpisz swoje samopoczucie:</label>
            <textarea id="Tresc" name="Tresc" class="form-control">@Model.Tresc</textarea>
        </div>
        <div class="form-group">
            <label for="CzyPrzyjalesDawke">Czy przyjąłeś dzisiaj leki?</label>
            <input type="checkbox" id="CzyPrzyjalesDawke" name="CzyPrzyjalesDawke" checked="@Model.CzyPrzyjalesDawke" />
        </div>
        <button type="submit" class="btn btn-primary">Zapisz</button>
    </form>
}